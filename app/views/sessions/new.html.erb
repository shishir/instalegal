<%= provide(:title, 'Sign into InstaLegal') %>
<div class="client-registration">
  <%= form_tag sessions_path do |f| %>
  <fieldset>
    <legend>Sign into InstaLegal</legend>
    <%= text_field_tag :email, nil, placeholder: "Email address..." %>
    <%= password_field_tag :password, nil, placeholder: "Password..." %>
    <div>
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div>
      <%= link_to "New to InstaLegal? Sign up now", new_client_path, class: "btn btn-primary" %>
    </div>
  </fieldset>
  <% end %>
</div>