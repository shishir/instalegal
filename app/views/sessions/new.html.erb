<%= provide(:title, 'Sign into InstaLegal') %>
<div class="login box"> 
  <div class="registration-form">
    <%= form_tag sessions_path, :class=>"form-horizontal" do |f| %>
    <fieldset>
      <legend>Sign into InstaLegal</legend>
      <div class="control-group">
        <%= text_field_tag :email, nil, placeholder: "Email address..."%>
      </div>
      <div class="control-group">
       <%= password_field_tag :password, nil, placeholder: "Password..." %>
      </div>
      <div class="control-group">
        <button type="submit" class="btn btn-primary btn-large">Login</button>
      </div>
      <hr>
      <div class="control-group">
        <p>New to InstaLegal?</p>
        <%= link_to "Sign up now", new_client_path, class: "btn btn-primary" %>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>